.cd-player{
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  border-radius: 50%;
  overflow: hidden;
}

.cd-player-img{
  width: 100%;
  height: 100%;
  animation: rot 10s linear infinite;
}

@keyframes rot{
  from{
    transform: rotate(0);
  }
  to{
    transform: rotate(360deg);
  }
}

.running{
  animation-play-state: running !important;
}

.paused{
  animation-play-state: paused !important;
}