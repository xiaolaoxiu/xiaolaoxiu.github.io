.songs{
  background-color: white;
}

.songs-header{
  background-color: #e9e9e9;
  padding: 30rpx;
  font-weight: bold;
  border-radius: 10rpx;
}

.songs-content{
  padding: 0 20rpx;
}

.songs-item{
  margin: 20rpx 0;
  height: 200rpx;
  display: flex;
}

.songs-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.songs-info{
  margin-left: 20rpx;
}

.songs-name{
  font-weight: bold;
}

.songs-ar{
  margin: 20rpx 0;
  text-overflow: -o-ellipsis-lastline;
	overflow: hidden;				
	text-overflow: ellipsis;		
	display: -webkit-box;			
	-webkit-line-clamp: 2;
	line-clamp: 2;					
	-webkit-box-orient: vertical;
}

.songs-ar,.songs-al{
  width: 490rpx;
  font-size: 30rpx;
  color: #555;
}

.songs-al{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
